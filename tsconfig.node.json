// This tsconfig gets applied to the scripts
{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
  },
  "include": ["vite.config.ts", "tailwind.config.js", "scripts", "common", "types/**/*.d.ts"]
}
